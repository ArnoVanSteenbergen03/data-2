{% set heroEntry = craft.entries.section('hero').one() %}
{% if heroEntry %}
  <div class="hero-card">
      <div class="hero-card__image">
        <img src="{{ heroEntry.image.one().url }}" alt="hero image">
      </div>
    <div class="hero-card__content">
      <h2 class="hero-card__title">{{ heroEntry.title }}</h2>
      <div class="hero-card__text">{{ heroEntry.context }}</div>
      <a href="./about" class="hero-card__button">Learn More</a>
    </div>
  </div>
{% endif %}